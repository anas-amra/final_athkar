<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FCFD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layoutDirection="rtl">

        <!-- العنوان -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="أذكار عند سماع الآذان"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_titlebar"
            android:padding="12dp"
            android:gravity="center" />

        <!-- الذكر 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/rounded_card"
            android:elevation="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ما يقال عند سماع الأذان"
                android:textSize="18sp"
                android:textColor="#0c575d"
                android:paddingBottom="8dp"
                android:textStyle="bold"
                android:textAlignment="center"
                />
            <!-- Athkar -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="يَقُولُ مِثْلَ مَا يَقُولُ الـمُؤَذِّنُ إلاَّ فِي ' حَيَّ عَلَى الصَّلاةِ وَحَيَّ عَلَى الفَلاَح 'ِ فَيَقُولُ:  لاَ حَوْلَ وَلا قُوَّةَ إلاَّ باللَّهِ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:lineSpacingExtra="6dp"
                android:textColor="#000000"
                android:paddingBottom="8dp" />

            <!-- Count -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="مرة واحدة"
                android:textSize="16sp"
                android:textColor="#0c575d"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- الذكر 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/rounded_card"
            android:elevation="6dp">

            <!-- Athkar -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="عنْ سَعْدِ بْن أَبي وقَّاصٍ رضِيَ اللَّه عنْهُ عَن النبي صَلّى اللهُ عَلَيْهِ وسَلَّم أَنَّهُ قَالَ: 'مَنْ قَال حِينَ يسْمعُ المُؤذِّنَ : أَشْهَد أَنْ لا إِله إِلاَّ اللَّه وحْدهُ لا شَريك لهُ ، وَأَنَّ مُحمَّداً عبْدُهُ وَرسُولُهُ ، رضِيتُ بِاللَّهِ ربًّا ، وبمُحَمَّدٍ رَسُولاً ، وبالإِسْلامِ دِينًا ، غُفِر لَهُ ذَنْبُهُ'. رواه مسلم ."
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:lineSpacingExtra="6dp"
                android:textColor="#000000"
                android:paddingBottom="8dp" />


            <!-- Count -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="مرة واحدة"
                android:textSize="16sp"
                android:textColor="#0c575d"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- الذكر 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/rounded_card"
            android:elevation="6dp">

            <!-- Athkar -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="عَنْ عبْدِ اللَّهِ بْنِ عَمرِو بْنِ العاصِ رضِيَ اللَّه عنْهُما أَنه سَمِع رسُولَ اللَّهِ صَلّى اللهُ عَلَيْهِ وسَلَّم يقُولُ : ' إِذا سمِعْتُمُ النِّداءَ فَقُولُوا مِثْلَ ما يَقُولُ ، ثُمَّ صَلُّوا علَيَّ ، فَإِنَّهُ مَنْ صَلَّى علَيَّ صَلاةً صَلَّى اللَّه عَلَيْهِ بِهَا عشْراً ، ثُمَّ سلُوا اللَّه لي الْوسِيلَةَ ، فَإِنَّهَا مَنزِلَةٌ في الجنَّةِ لا تَنْبَغِي إِلاَّ لعَبْدٍ منْ عِباد اللَّه وَأَرْجُو أَنْ أَكُونَ أَنَا هُو ، فَمنْ سَأَل ليَ الْوسِيلَة حَلَّتْ لَهُ الشَّفاعَةُ '. رواه مسلم"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:lineSpacingExtra="6dp"
                android:textColor="#000000"
                android:paddingBottom="8dp" />


            <!-- Count -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="مرة واحدة"
                android:textSize="16sp"
                android:textColor="#0c575d"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- الذكر 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/rounded_card"
            android:elevation="6dp">

            <!-- Athkar -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="عَنْ جابرٍ بن عبد الله رضَي اللَّه عنهما‏ أَنَّ رَسُولَ اللَّهِ صَلّى اللهُ عَلَيْهِ وسَلَّم قَالَ : ' من قَال حِين يسْمعُ النِّداءَ : اللَّهُمَّ رَبَّ هذِهِ الدَّعوةِ التَّامَّةِ ، والصَّلاةِ الْقَائِمةِ، آت مُحَمَّداً الْوسِيلَةَ ، والْفَضَيِلَة، وابْعثْهُ مقَامًا محْمُوداً الَّذي وعَدْتَه ، حلَّتْ لَهُ شَفَاعتي يوْم الْقِيامِة ' .رواه البخاري ."
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:lineSpacingExtra="6dp"
                android:textColor="#000000"
                android:paddingBottom="8dp" />


            <!-- Count -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="مرة واحدة"
                android:textSize="16sp"
                android:textColor="#0c575d"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- الذكر 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/rounded_card"
            android:elevation="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ما يقال بعد سماع الأذانِِ"
                android:textSize="18sp"
                android:textColor="#0c575d"
                android:paddingBottom="8dp"
                android:textStyle="bold"
                android:textAlignment="center"
                />
            <!-- Athkar -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اللَّهُمَّ صَلِّ وَسَلِّمْ وَبَارِكْ عَلَى سَيِّدِنَا مُحَمَّدٍ.
اللَّهُمَّ رَبَّ هَذِهِ الدَّعْوَةِ التَّامَّةِ، والصَّلاةِ القَائِمَةِ، آتِ مُـحَمَّداً الوَسِيْلَةَ والفَضِيْلَةَ، وابْعَثْهُ مَقَاماً مَـحْمُوداً الَّذِي وَعَدْتَهُ، إنَّكَ لا تُخْلِفُ الـمِيْعَادِ. "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:lineSpacingExtra="6dp"
                android:textColor="#000000"
                android:paddingBottom="8dp" />


            <!-- Count -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="مرة واحدة"
                android:textSize="16sp"
                android:textColor="#0c575d"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- الذكر 6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/rounded_card"
            android:elevation="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ما يقال بين الأذان والإقامة"
                android:textSize="18sp"
                android:textColor="#0c575d"
                android:paddingBottom="8dp"
                android:textStyle="bold"
                android:textAlignment="center"
                />
            <!-- Athkar -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ما بين الأذان والإقامة فالدعاء عندئذٍ مرغّب فيه ومستحب. قَالَ رَسُولُ اللَّهِ صَلَّى اللَّهُ عَلَيْهِ وَسَلَّمَ: ' الدُّعَاءُ لَا يُرَدُّ بَيْنَ الْأَذَانِ وَالْإِقَامَةِ ' . قَالَ رَسُولُ اللَّهِ صَلَّى اللَّهُ عَلَيْهِ وَسَلَّمَ: ' إِنَّ الدُّعَاءَ لَا يُرَدُّ بَيْنَ الْأَذَانِ وَالْإِقَامَةِ فَادْعُوا '."
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:lineSpacingExtra="6dp"
                android:textColor="#000000"
                android:paddingBottom="8dp" />


            <!-- Count -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="مرة واحدة"
                android:textSize="16sp"
                android:textColor="#0c575d"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingTop="4dp" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
