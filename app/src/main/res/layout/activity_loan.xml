<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FCFD">


   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layoutDirection="rtl"
       android:padding="16dp"
       >

       <!-- العنوان -->
       <TextView
           android:id="@+id/tv_titleLoan"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/rounded_titlebar"
           android:gravity="center"
           android:padding="12dp"
           android:text="دعاء قضاء الدين"
           android:textAlignment="center"
           android:textColor="#FFFFFF"
           android:textSize="24sp"
           android:textStyle="bold"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <!-- الذكر 1 -->
        <RelativeLayout
            android:id="@+id/cardLoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_card"
            android:elevation="6dp"
            android:padding="16dp"
            android:layout_below="@id/tv_titleLoan"
            >

            <TextView
                android:id="@+id/tv_titlecardLoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="الدعاء الاول ِ"
                android:textAlignment="center"
                android:textColor="#0c575d"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Athkar -->
            <TextView
                android:id="@+id/tv_athkarLoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="6dp"
                android:paddingBottom="8dp"
                android:text="حديث عليٍّ : أنَّ مُكاتبًا جاءه فقال: إني قد عجزتُ عن مُكاتبتي، فأعني. قال: ألا أُعلِّمك كلمات علَّمنيهنَّ رسولُ الله ﷺ، لو كان عليك مثل جبل صيرٍ دَيْنًا أدَّاه الله عنك؟ قال: قل: اللهم اكفني بحلالك عن حرامك، وأغنني بفضلك عمَّن سواك"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/tv_titlecardLoan"
                 />

            <!-- Count -->
            <TextView
                android:id="@+id/tv_countLoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="4dp"
                android:text="مرة واحدة"
                android:textColor="#0c575d"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_below="@id/tv_athkarLoan"
                />



        </RelativeLayout>

        <!-- الذكر 1 -->
        <RelativeLayout
            android:id="@+id/cardLoan2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_card"
            android:elevation="6dp"
            android:padding="16dp"
            android:layout_below="@id/cardLoan"
            >

            <TextView
                android:id="@+id/tv_titlecardLoan2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="الدعاء الثانيِ"
                android:textAlignment="center"
                android:textColor="#0c575d"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Athkar -->
            <TextView
                android:id="@+id/tv_athkarLoan2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="6dp"
                android:paddingBottom="8dp"
                android:text="روى البخاري عن أنس بن مالك رضى الله عنه قال: كنت أخدم رسول اللَّه صلى الله عليه وسلم كلما نزل، فكنت أسمعه يكثر أن يقول: [اللَّهُمَّ إِنِّي أَعُوذُ بِكَ مِنَ الْهَمِّ وَالْحَزَنِ، وَالْعَجْزِ وَالْكَسَلِ، وَالْبُخْلِ وَالْجُبْنِ ، وَضَلَعِ الدَّيْنِ، وَغَلَبَةِ الرِّجَالِ] ."
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/tv_titlecardLoan2"
                 />

            <!-- Count -->
            <TextView
                android:id="@+id/tv_countLoan2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="4dp"
                android:text="مرة واحدة"
                android:textColor="#0c575d"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_below="@id/tv_athkarLoan2"
                />



        </RelativeLayout>


   </RelativeLayout>



</ScrollView>



